<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OurSpace" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="buttonText" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/hkgrotesk_medium</item>
        <item name="background">@color/pink</item>
    </style>

    <style name="EditButtonText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/hkgrotesk_semibold</item>
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="EditButtonLoginText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/hkgrotesk_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>